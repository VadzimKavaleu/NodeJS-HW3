<mvc:View controllerName="zkav.OData_HW.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
							<Table items="{plant>/value}" id="List">
						<items>
							<ColumnListItem type="Navigation" press="onClick" id="item0">
								<cells>
									<Text text="{plant>_id}" id="text0"/>
									<Text text="{plant>name}" id="text1"/>
									<Text text="{plant>description}" id="text2"/>
								</cells>
							</ColumnListItem>
						</items>
						<columns>
							<Column id="column0">
								<header>
									<Label text="{i18n>plantId}" id="label0"/>
								</header>
							</Column>
							<Column id="column1">
								<header>
									<Label text="{i18n>plantName}" id="label1"/>
								</header>
							</Column>
							<Column id="column2">
								<header>
									<Label text="{i18n>plantDescription}" id="label2"/>
								</header>
							</Column>
						</columns>
					</Table>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>